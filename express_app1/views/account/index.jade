html 
  head
    title Account List
  body
    h3 Account List
    a(href="/account/add") Add
    br
    table(border="1")
      tr
        th Id
        th FirstName
        th FirstName
        th Email
        th Action
      each account in accounts
        tr
          td #{account.id} 
          td #{account.firstname} 
          td #{account.lastname} 
          td #{account.email} 
          td 
            a(href="/account/edit/" + account.id) Edit
            a(href="/account/delete/" + account.id, onclick="return confirm('Are you sure?')") Delete

